<%- include("partials/header.ejs") %>
    <div class="container flex">
        <div class="grid-wrapper">
            <div class="head"><%= listTitle %></div>
            <% if (locals.allToDo && allToDo.length > 0) { %>
                <% for (let i = 0; i < allToDo.length; i++) { %>
                    <form method="post" action="/delete" id="myForm">
                        <input name="checkbox" type="checkbox" id="myCheckox" value="<%=allToDo[i]._id%>">
                        <input name="customListName" value="<%= listTitle %>" type="hidden">
                        <button class="grid-item" type="submit" id="myButton"><%= allToDo[i].name %></button>
                    </form>
                <% } %>
            <% } else { %>
                <div class="grid-item">No tasks added!</div>
            <% } %>
        </div>
        <form action="<%= action %>" method="post" class="d-flex task-box" role="input">
            <input name="newToDo" required class="form-control me-2" type="text" placeholder="Add Task" aria-label="Search">
            <input name="customListName" value="<%= listTitle %>" type="hidden">
            <button class="btn btn-outline-success" type="submit">Add</button>
          </form>
    </div>
<%- include("partials/footer.ejs") %>