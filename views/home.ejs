<%- include("partials/header.ejs") %>
    <div class="container flex">
        <div class="grid-wrapper">
            <div class="head">Home Tasks:</div>
            <% if (locals.homeToDo && homeToDo.length > 0) { %>
                <% for (let i = 0; i < homeToDo.length; i++) { %>
                    <form method="post" action="/delete" id="myForm">
                        <input name="checkbox" type="checkbox" id="myCheckox" value="<%=homeToDo[i]._id%>">
                        <button class="grid-item" type="submit" id="myButton"><%= homeToDo[i].name %></button>
                    </form>
                <% } %>
            <% } else { %>
                <div class="grid-item">No tasks added!</div>
            <% } %>
        </div>
    </div>
<%- include("partials/footer.ejs") %>