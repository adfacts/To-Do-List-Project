<%- include("partials/header.ejs") %>
    <div class="container flex">
        <div class="grid-wrapper">
            <div class="head">Home Tasks:</div>
            <% if (locals.homeToDo && homeToDo.length > 0) { %>
                <% for (let i = 0; i < homeToDo.length; i++) { %>
                    <div class="grid-item">
                        <%= homeToDo[i].name %>
                    </div>
                <% } %>
            <% } else { %>
                <div class="grid-item">No tasks added!</div>
            <% } %>
        </div>
    </div>
